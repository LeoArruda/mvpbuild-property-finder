<main role="main" class="main-banner" id="blog-banner">

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-4"><%= @post.title %></h1>
      <p class="text-muted"><em>Post <%= time_ago_in_words @post.created_at %></em></p>
    </div>
  </div>
</main>

<div class="container">
  <%= image_tag  @post.image.thumb.url, class: "float-right mb-4 ml-4" if @post.image.present?  %>
  <strong>Title:</strong>
  
  <%= simple_format @post.body %>

  <p><%= link_to "Latest blog posts", blog_path %></p>
</div>