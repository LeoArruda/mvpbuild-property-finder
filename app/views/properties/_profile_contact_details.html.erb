<div class="text-center">
    <div class="mb-2">
        <%= profile_picture agent%>
    </div>
    <h3 class="h4 m-0"><%= agent.full_name%></h3>
    <p><%= agent.company%></p>

    <div class="row justify-content-md-center">
        <div class="col-md-10">
            <button class="btn btn-block btn-info text-uppercase mb-1" id="show-tel" data-phone="<%= agent.phone %>"><i class="fas fa-phone ml-2 mr-2"></i> <span>Call</span></button>
        </div>
  
        <div class="col-md-10">
            <button class="btn btn-block btn-success text-uppercase" data-toggle="modal" data-target="#contact-modal"><i class="fas fa-envelope ml-2 mr-2"></i> <span>Email</span></button>
        </div>
    </div>
</div>