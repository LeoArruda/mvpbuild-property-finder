<div class="text-center border p-4 pb-4 ml-lg-4">
    <div class="text-center mb-2">
        <%= profile_picture @agent%>
    </div>
    <h3 class="h4 m-0"><%= @agent.full_name%></h3>
    <p><%= @agent.company%></p>
    <button class="btn btn-block btn-info text-uppercase mb-4" id="show-tel" data-phone="<%= @agent.phone %>"><i class="fas fa-phone ml-2 mr-2"></i> <span>Call</span></button>

    <%= link_to "Profile", profile_path(@agent.id), class: "btn btn-secondary text-uppercase" %>
    <button class="btn btn-success text-uppercase" data-toggle="modal" data-target="#contact-modal">Email</button>
</div>